{
  "name": "avalanche-bounty-contract",
  "version": "1.0.0",
  "description": "GitCare Bounty Contract for Avalanche",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:fuji": "npx hardhat run scripts/deploy.js --network fuji",
    "deploy:avalanche": "npx hardhat run scripts/deploy.js --network avalanche"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "chai": "^4.3.10",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^16.3.1"
  }
}